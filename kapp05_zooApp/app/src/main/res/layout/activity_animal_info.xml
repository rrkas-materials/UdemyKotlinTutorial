<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tvAnimalName"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnimalInfo">

    <ImageView
        android:id="@+id/ivAnimal"
        android:layout_width="100pt"
        android:layout_height="100pt"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baboon"
        tools:ignore="ContentDescription" />

    <TextView
        android:textStyle="bold"
        android:fontFamily="serif"
        android:id="@+id/tvAnimalNameInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Baboon"
        android:textSize="22sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivAnimal"
        tools:ignore="HardcodedText" />

    <TextView
        android:padding="5pt"
        android:id="@+id/tvAnimalDescInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="It is a kind of monkey."
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAnimalNameInfo"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>